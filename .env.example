# ===========================================
# Production Environment Variables Template
# ===========================================
# Copy this file and rename to .env for local development
# For production (Render/Heroku), set these as environment variables in your dashboard

# Security Settings (REQUIRED FOR PRODUCTION)
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here

# Debug mode - MUST be False in production
DEBUG=False

# Allowed hosts - comma separated list of your domains
ALLOWED_HOSTS=panesar-pg.onrender.com,localhost,127.0.0.1

# Database URL (Render PostgreSQL, Heroku, etc.)
# For SQLite (development): sqlite:///db.sqlite3
# For PostgreSQL: postgres://user:password@host:port/database
DATABASE_URL=postgres://user:password@hostname:5432/database_name

# Optional: Django log level
DJANGO_LOG_LEVEL=INFO
