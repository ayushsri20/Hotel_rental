web: echo "=== Starting deployment ===" && python3 manage.py migrate --noinput && echo "=== Migrations complete ===" && python3 manage.py collectstatic --noinput && echo "=== Static files collected ===" && python3 manage.py shell -c "from django.contrib.auth.models import User; User.objects.filter(username='ayush').exists() or User.objects.create_superuser('ayush', 'admin@example.com', 'admin123'); print('Superuser check complete')" && echo "=== Starting Gunicorn ===" && gunicorn -w 4 -b 0.0.0.0:${PORT:-8000} hotel_project.wsgi:application
